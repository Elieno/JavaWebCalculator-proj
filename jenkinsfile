pipeline {
    agent any

    stages {
        stage('Initializing Maven') {
            steps {
                sh 'mvn initialize'
            }
        }
        stage('Check out') {
            steps {
                sh 'checkout scmGit(branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Elieno/JavaWebCalculator-proj.git']])'
            }
        }
        stage ('Build'){
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('test'){
            steps {
                sh 'mvn test'
            }
        }
        stage ('Execute ansible playbook'){
            steps {
                sh 'ls /home/'
                sh 'ls /home/centos'
                ansiblePlaybook disableHostKeyChecking: true, installation: 'Ansible', inventory: 'hosts.ini', playbook: 'ansiplaybook.yml'
            }
        }
    }
}
